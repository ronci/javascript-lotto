{
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "globals": { "_": true },
  "plugins": ["import", "html"],
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", 15],
    "indent": ["error", 2]
  }
}
